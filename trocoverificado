Algoritmo "troco verificado"

Var

   precounitario, recebido, troco, resto : real
   quantidade : inteiro


Inicio

  escreva("Preco unitario do produto: ")
  leia(precounitario)
  escreva("Quantidade comprada: ")
  leia(quantidade)
  escreva("Dinheiro recebido: ")
  leia(recebido)
  
  se recebido >= (precounitario * quantidade) entao
  troco <- recebido - precounitario * quantidade
  escreval("TROCO = ", troco:4:2)
  
  senao
  resto <- precounitario * quantidade - recebido
  escreval("DINHEIRO INSUFICIENTE. FALTAM ", resto:4:2, " REAIS")
  fimse



Fimalgoritmo
