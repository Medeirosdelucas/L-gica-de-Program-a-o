Algoritmo "troco"

Var

  precounitario, recebimento, troco : real
  quantidadecomprada : inteiro



Inicio

      escreva("Digite o preço unitário do produto: ")
      leia(precounitario)
      escreva("Digite a quantidade comprada: ")
      leia(quantidadecomprada)
      escreva("Digite o valor recebido: ")
      leia(recebimento)
      
      troco <- recebimento - (precounitario * quantidadecomprada)

      escreva(" TROCO =", troco)



Fimalgoritmo
